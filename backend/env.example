# AI University System - Backend Environment Variables
# 실제 사용 시 .env 파일로 복사하고 값들을 설정하세요

# 기본 애플리케이션 설정
APP_NAME="AI University System"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
SECRET_KEY="your-super-secret-key-change-this-in-production"

# 서버 설정
HOST="0.0.0.0"
PORT=8000

# 데이터베이스 설정 (Supabase)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-anon-key"
SUPABASE_SERVICE_KEY="your-service-role-key"

# AI API 설정
DEEPSEEK_API_KEY="your-deepseek-api-key"
DEEPSEEK_BASE_URL="https://api.deepseek.com"

# YouTube API 설정
YOUTUBE_API_KEY="your-youtube-api-key"

# Redis 설정 (캐싱)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# JWT 설정
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 로깅 설정
LOG_LEVEL="INFO"

# GitHub 콘텐츠 설정
GITHUB_TOKEN="your-github-token"
CONTENT_REPO="your-username/ai-university-content"
CONTENT_BRANCH="main"

# Cloudflare R2 설정 (선택사항)
R2_ACCOUNT_ID="your-r2-account-id"
R2_ACCESS_KEY="your-r2-access-key"
R2_SECRET_KEY="your-r2-secret-key"
R2_BUCKET_NAME="ai-university-media" 