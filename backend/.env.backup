# AI University System - Environment Variables

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="AI University System"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"

# =============================================================================
# SERVER SETTINGS
# =============================================================================
HOST="127.0.0.1"
PORT=8000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY="your-super-secret-key-change-this-in-production-at-least-32-characters-long"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# DATABASE - SUPABASE
# =============================================================================
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_KEY="your-supabase-service-role-key"

# =============================================================================
# AI APIs
# =============================================================================
# Deepseek API
DEEPSEEK_API_KEY="your-deepseek-api-key"
DEEPSEEK_BASE_URL="https://api.deepseek.com"

# =============================================================================
# EXTERNAL APIs
# =============================================================================
# YouTube Data API
YOUTUBE_API_KEY="your-youtube-api-key"

# =============================================================================
# STORAGE - CLOUDFLARE R2
# =============================================================================
R2_ACCOUNT_ID="your-r2-account-id"
R2_ACCESS_KEY="your-r2-access-key"
R2_SECRET_KEY="your-r2-secret-key"
R2_BUCKET_NAME="ai-university-media"

# =============================================================================
# REDIS CACHE
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# =============================================================================
# GITHUB CONTENT
# =============================================================================
GITHUB_TOKEN="your-github-token"
CONTENT_REPO="your-username/ai-university-content"
CONTENT_BRANCH="main"

# =============================================================================
# FILE UPLOAD
# =============================================================================
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=10485760